ESP8266WebServer server(80);



void handleRoot() {
  server.send(200, "text/plain", "{\"status\":\"running\", \"name\": \"dmx\"}");
}

void handleNotFound() {
  String message = "File Not Found\n\n";
  message += "URI: ";
  message += server.uri();
  message += "\nMethod: ";
  message += (server.method() == HTTP_GET) ? "GET" : "POST";
  message += "\nArguments: ";
  message += server.args();
  message += "\n";
  for (uint8_t i = 0; i < server.args(); i++) {
    message += " " + server.argName(i) + ": " + server.arg(i) + "\n";
  }
  server.send(404, "text/plain", message);
}

void updateDMX(int channel, int value, int universe) {
  if (channel >= 1 && channel <= 512 && value >= 0 && value <= 255 ) {
    if (universe) {
      valsB[channel - 1] = value;
      dmxB.setChans(valsB, 512, 1);
    }
    else {
      valsA[channel - 1] = value;
      dmxA.setChans(valsA, 512, 1);
    }
  }
}

void setup() {
  WiFi.begin(ssid, password);

  // Wait for connection
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
  }

  server.on("/", handleRoot);

  server.on("/dmx", []() {
    updateDMX(server.arg("chn").toFloat(), server.arg("val").toFloat(),
              server.arg("univ").toFloat());;
    server.send(200, "text/plain", "OK");
  });

  server.onNotFound(handleNotFound);

  server.begin();

  // Start dmxA, status LED on pin 12 with 1/5 intensity
  dmxA.begin(12, 51);

  // Start dmxB, status LED on pin 13 with 1/5 intensity
  dmxB.begin(13, 51);
}


void loop() {
  server.handleClient();
}
